<!-- language_translations_filter -->
<div class="LanguageTranslationsFilter">
    <fieldset class="Filter">
        <legend>##Message##</legend>
        <div class="Resize">
            ##Source## {widget id="source"}
            ##Translation## {widget id="translation"}
        </div>
    </fieldset>

    <fieldset class="Filter">
       <legend>##Status##</legend>
       <div class="Resize">
       {widget id="status"}
       </div>
    </fieldset>
   
    <fieldset class="Filter">
       <legend>##Type##</legend>
       <div class="Resize">
       {widget id="type"}
       </div>
    </fieldset>
   
    <fieldset class="Filter">           
       <legend>##Module##</legend>
       <div class="Resize">
       {widget id="module"}
       </div>
    </fieldset>
   
    <fieldset class="Filter">
       <legend>##Is custom##</legend>
       <div class="Resize">
       {widget id="customer"}
       </div>
    </fieldset>
</div>
<div style="clear: both;"></div>
