<!-- plugin_detail -->
<table class="PluginDetail">
	<tr>
		<td width="60px">{widget id="Logo"}</td>
		<td width="450px" class="PluginData">
			<div class="PluginHeader">
				<div class="PluginName">{widget id="Name"}</div>
				<div class="PluginInfo">##version## {widget id="Version"} / {widget id="Author"}</div>
				<div class="clear"></div>
			</div>
		    <div class="PluginDescription">{widget id="Description"}</div>
		</td>
		<td width="100px" class="PluginMoreInfo">{widget id="Help"}{widget id="Settings"}</td>
		<td width="150px" class="PluginActions">{widget id="Actions"}</td>
	</tr>
</table>



