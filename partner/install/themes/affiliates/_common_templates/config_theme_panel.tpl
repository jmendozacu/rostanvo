<!-- config_theme_panel -->
<div class="ThemeHeader">
	<div class="ThemeHeaderLeft">
		{widget id="ThemeName" class="ThemeName"}
	</div>
	<div class="ThemeHeaderRight">
		{widget id="SelectButton" class=ThemeButton"}
	</div>
	<div class="ClearBoth"></div>
</div>
<div class="ThemeBody">
	<div class="ThemeThumbnailWrapper">
		{widget id="ThemeThumbnail" class="ThemeThumbnail"}
	</div>
	<div class="ThemeDefinition">
		{widget id="ThemeDescription" class="ThemeDescription"}
		{widget id="ThemeAuthor" class="ThemeAuthor"}
		{widget id="ThemeUrl" class="ThemeUrl"}
		<div class="ThemeButtons">
			{widget id="EditButton" class=ThemeButton"}
    		{widget id="EnableButton" class=ThemeButton"}
    	</div>
	</div>
	<div class="ClearBoth"></div>
</div>

