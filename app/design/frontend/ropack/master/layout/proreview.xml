<layout version="0.1.0">
        <default>
            <reference name="head">
                <action method="addCss"><stylesheet>css/review.css</stylesheet></action>
            </reference>
        </default>
        <catalog_product_view translate="label">
            <reference name="content">
                <reference name="product.info">
                  
                    <reference name="product.info.additional">
                           <block type="catalog/product_view" name="custom.proreview" template="proreview/main.phtml"/>
                    </reference>
                </reference>
            </reference>
        </catalog_product_view>



</layout>
